{
  "name": "knowledge-graph-visualizer",
  "displayName": "Agent Context Graph Visualizer",
  "description": "Interactive visualization of markdown-based knowledge graphs with agent-readiness analysis. Right-click a folder to see interconnected markdown files as a force-directed graph with health scores, broken link detection, token budgets, reachability analysis, and more.",
  "version": "0.2.1",
  "publisher": "NicoLlorens",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicollorens12/Agent-Knowledge-Graph-Visualizer"
  },
  "homepage": "https://github.com/nicollorens12/Agent-Knowledge-Graph-Visualizer#readme",
  "bugs": {
    "url": "https://github.com/nicollorens12/Agent-Knowledge-Graph-Visualizer/issues"
  },
  "icon": "icon.png",
  "keywords": [
    "agent-context",
    "knowledge-graph",
    "markdown",
    "visualization",
    "d3",
    "graph",
    "documentation-health"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentContextGraph.visualize",
        "title": "Visualize Agent Context Graph"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "agentContextGraph.visualize",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  }
}
